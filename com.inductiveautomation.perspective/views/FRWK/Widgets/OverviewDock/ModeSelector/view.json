{
  "custom": {
    "mode": 1
  },
  "params": {
    "id": 1,
    "mode": 1
  },
  "propConfig": {
    "custom.mode": {
      "binding": {
        "config": {
          "struct": {
            "greenhouseId": "{view.params.id}"
          },
          "waitOnAll": true
        },
        "transforms": [
          {
            "code": "\treturn 0 if core.greenhouse.controller.get_auto_from_greenhouse(value.greenhouseId) else 1",
            "type": "script"
          }
        ],
        "type": "expr-struct"
      },
      "persistent": true
    },
    "params.id": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.mode": {
      "binding": {
        "config": {
          "path": "view.custom.mode"
        },
        "transforms": [
          {
            "code": "\treturn value",
            "type": "script"
          }
        ],
        "type": "property"
      },
      "paramDirection": "output",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 63,
      "width": 381
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Title"
        },
        "position": {
          "basis": "32px",
          "grow": 1
        },
        "props": {
          "style": {
            "marginLeft": "20px"
          },
          "text": "@ui.text.mode@"
        },
        "type": "ia.display.label"
      },
      {
        "events": {
          "component": {
            "onActionPerformed": {
              "config": {
                "script": "\tgreenhouse_id \u003d self.view.params.id\n\tis_auto \u003d (self.props.value \u003d\u003d 0)\n\tcore.greenhouse.controller.set_auto(greenhouse_id, is_auto)"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
          "name": "ModeSelector"
        },
        "propConfig": {
          "props.value": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.custom.mode"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "options": [
            {
              "label": "@ui.mode.auto@",
              "value": 0
            },
            {
              "label": "@ui.mode.manual@",
              "value": 1
            }
          ],
          "style": {
            "marginRight": "20px"
          }
        },
        "type": "ia.input.dropdown"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "alignItems": "center",
      "justify": "center"
    },
    "type": "ia.container.flex"
  }
}